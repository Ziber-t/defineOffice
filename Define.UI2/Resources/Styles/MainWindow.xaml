<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Define.UI2.Resources">
    <Style x:Key="btnStyle">
        <Setter Property="Control.Width" Value="100"></Setter>
        <Setter Property="Control.Height" Value="20"></Setter>
    </Style>
    <Style x:Key="mainGrid">
        <Setter Property="Control.Background" Value="#9f9f9f"></Setter>
    </Style>
    <Style x:Key="textBlockStyle" TargetType="TextBox">
        <Setter Property="TextBlock.Width" Value="1000"></Setter>
        <Setter Property="TextBlock.Height" Value="200"></Setter>
        <Setter Property="TextBlock.FontSize" Value="22"></Setter>
    </Style>
</ResourceDictionary>